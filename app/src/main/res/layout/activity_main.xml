<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorQuickActionBackground"
    android:padding="4dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/PlayerPlacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="PlayerPlacing:"
            android:textColor="@color/ColorNotColor3"
            android:textSize="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/AttackerPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="AttackerPlayer"
            android:textColor="@color/ColorWhite"
            android:textSize="28dp"
            android:fontFamily="@font/ubuntu_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PlayerPlacing" />


        <EditText
            android:id="@+id/AttackerPlayerNumberInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:hint="PlayerNumber"
            android:inputType="number"
            android:text="1"

            android:textColor="@color/ColorWhite"
            android:textColorHint="@color/ColorTextHint"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/AttackerPlayer"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/DefenderPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="DefenderPlayer"
            android:textColor="@color/ColorWhite"
            android:textSize="28dp"
            app:layout_constraintTop_toBottomOf="@+id/AttackerPlayerNumberInput"
            tools:layout_editor_absoluteX="-16dp" />

        <EditText
            android:id="@+id/DefenderPlayerNumberInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:hint="PlayerNumber"
            android:inputType="number"
            android:text="1"

            android:textColor="@color/ColorWhite"
            android:textColorHint="@color/ColorTextHint"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/DefenderPlayer"
            tools:layout_editor_absoluteX="12dp" />

        <Button
            android:id="@+id/ToAddingPlayersButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ColorAccent"
            android:text="Next"
            android:textColor="@color/ColorQuickActionBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.949"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DefenderPlayerNumberInput"
            app:layout_constraintVertical_bias="0.048"
            tools:ignore="UnknownId" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
